extends ../layouts/main.pug

block content
    .card
        .card-body
            form(name="sign-up" for="/sign-up" method="POST").form-group

                label(for="name") Name
                input(type="text" name="name").form-control.form-group#name

                label(for="email") Email
                input(type="email" name="email").form-control.form-group#email

                label(for="password") Password
                input(type="password" name="password").form-control.form-group#password

                .form-group
                    label Gender
                    select(name="gender").form-control
                        option Female
                        option Male
                        option Other
                        
                button(type="submit").btn.btn-dark Sign Up


        .card-footer.bg-dark
            small.form-text.text-light We'll never share your personality information with anyone else.